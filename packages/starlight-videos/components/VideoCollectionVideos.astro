---
import type { Props as StarlightProps } from '@astrojs/starlight/props'
import type { ComponentProps } from 'astro/types'

import { getCollectionFromCollectionVideo, getCollectionVideos } from '../libs/video'
import type { CollectionVideo } from '../schemas'

import CollectionVideos from './CollectionVideos.astro'

interface Props extends StarlightProps {
  collectionVideo: CollectionVideo
  variant?: ComponentProps<typeof CollectionVideos>['variant']
}

const { collectionVideo, locale, variant } = Astro.props

const collectionVideos = await getCollectionVideos(getCollectionFromCollectionVideo(collectionVideo), locale)
---

<CollectionVideos {...Astro.props} collectionVideos={collectionVideos} {variant} />
