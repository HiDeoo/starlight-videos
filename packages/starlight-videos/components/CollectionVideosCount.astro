---
import { Icon } from '@astrojs/starlight/components'

import type { CollectionVideoEntry } from '../libs/video'

interface Props {
  collectionVideos: CollectionVideoEntry[]
}

const { collectionVideos } = Astro.props
---

<div>
  <Icon name="list-format" size="1rem" />
  {Astro.locals.t('starlightVideos.videos.count', { count: collectionVideos.length })}
</div>

<style>
  div {
    align-items: center;
    display: flex;
    gap: 0.3125rem;
  }
</style>
