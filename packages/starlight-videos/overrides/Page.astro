---
import Default from '@astrojs/starlight/components/Page.astro'
import type { Props } from '@astrojs/starlight/props'

import { isAnyVideoEntry } from '../libs/video'

const { entry } = Astro.props
let { hasSidebar, toc } = Astro.props

if (isAnyVideoEntry(entry)) {
  entry.data = {
    ...entry.data,
    template: 'splash',
  }
  hasSidebar = false
  toc = undefined
}
---

<Default {...Astro.props} {hasSidebar} {entry} {toc}><slot /></Default>
