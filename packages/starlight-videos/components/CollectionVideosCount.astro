---
import { Icon } from '@astrojs/starlight/components'

import type { CollectionVideoEntry } from '../libs/video'

export interface Props {
  as?: keyof HTMLElementTagNameMap
  class?: string
  collectionVideos: CollectionVideoEntry[]
  withIcon?: boolean
}

const { as: Element = 'div', class: className, collectionVideos, withIcon = true } = Astro.props
---

<Element class:list={[className]}>
  {withIcon && <Icon name="list-format" size="1rem" />}
  {Astro.locals.t('starlightVideos.videos.count', { count: collectionVideos.length })}
</Element>

<style>
  div {
    align-items: center;
    display: flex;
    gap: 0.3125rem;
  }
</style>
