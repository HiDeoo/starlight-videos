---
import Default from '@astrojs/starlight/components/MarkdownContent.astro'
import type { Props } from '@astrojs/starlight/props'

import { isCollectionEntry, isCollectionsEntry, isVideosEntry } from '../libs/video'

import Collection from './Collection.astro'
import Collections from './Collections.astro'
import Videos from './Videos.astro'

const { entry } = Astro.props
---

{
  isCollectionEntry(entry) ? (
    <Collection collectionEntry={entry} />
  ) : isVideosEntry(entry) ? (
    <Videos />
  ) : isCollectionsEntry(entry) ? (
    <Collections />
  ) : (
    <Default {...Astro.props}>
      <slot />
    </Default>
  )
}
